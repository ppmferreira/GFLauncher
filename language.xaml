<Window x:Name="win_lang" x:Class="GFLauncher.language"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GFLauncher"
        mc:Ignorable="d"
        Title="Language" Height="113" Width="271" Initialized="win_lang_Initialized" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Window.Style>
        <Style/>
    </Window.Style>
    <Grid Margin="0,0,0,-6" HorizontalAlignment="Right" Width="271">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Button x:Name="btn_OK" Content="Ok" HorizontalAlignment="Left" Margin="60,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Click="btn_OK_Click" Width="78" Grid.Column="3" BorderBrush="#FF6CEF15" Style="{Binding Effect.HasAnimatedProperties, ElementName=btn_OK, Mode=OneWay}"/>
        <ComboBox x:Name="cb_langs" HorizontalAlignment="Left" Margin="18,10,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="cb_langs_SelectionChanged" Grid.ColumnSpan="4"/>

    </Grid>
</Window>
